<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppShop.PhonePage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout HorizontalOptions="Center" >
           <Label Text="{Binding Brand}" FontSize="Large"/>
           <Label Text="{Binding Model}" FontSize="Large"/>
           <Label Text="{Binding Price}" FontSize="Large"/>
           <Image Source="{Binding ImageFile}" HeightRequest="300" 
                  WidthRequest="150"/>
            <Button Text="Купить" FontSize="Large" Clicked="Button_Clicked"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>